<!DOCTYPE html>
<html lang="ko">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>

<body>
  <h1>글 수정</h1>
  <form class="board_form" onsubmit="onSubmit('<%= modifyFindPost.title %>');">
    <div class="form_title">
      <h3>제목</h3>
      <input type="text" class="title" name="title" value="<%= modifyFindPost.title %>" />
    </div>
    <div class="form_content">
      <h3>내용</h3>
      <textarea name="content" class="content" cols="30" rows="10"><%= modifyFindPost.content %>
          </textarea>
    </div>
    <button type="submit">수정</button>
  </form>
</body>

<script>
  const title = document.querySelector('.title');
  const content = document.querySelector('.content');

  function onSubmit(event, postTitle) {
    event.preventDefault();
    fetch(`http://localhost:4000/board/modify/${postTitle}`, {
      method: 'put',
      headers: {
        'Content-type': 'application/json'
      },
      body: JSON.stringify({
        title: title.value,
        content: content.value
      })
    }).then((res) => {
      console.log(res);
    })
  }
</script>

</html>